{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "rangeStrategy": "pin",
      "matchManagers": ["npm"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentValue": "!/^0\\./",
      "automerge": true
    }
  ]
}
