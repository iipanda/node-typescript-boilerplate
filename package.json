{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0",
    "pnpm": "^9.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/main.js",
    "build": "tsup src/main.ts --clean",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "9.11.1",
    "@types/node": "20.16.8",
    "eslint": "9.11.1",
    "prettier": "3.3.3",
    "tsup": "8.3.0",
    "typescript": "5.6.2",
    "typescript-eslint": "8.7.0",
    "vite-tsconfig-paths": "5.0.1",
    "vitest": "2.1.1"
  }
}