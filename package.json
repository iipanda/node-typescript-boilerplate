{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0",
    "pnpm": "^9.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/main.js",
    "build": "tsup src/main.ts --clean",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "20.19.35",
    "eslint": "10.0.2",
    "prettier": "3.8.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.9"
  }
}