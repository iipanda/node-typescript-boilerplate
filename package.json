{
  "name": "node-typescript-boilerplate",
  "version": "0.0.0",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/main.js",
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/node": "^20.12.7",
    "eslint": "^9.1.1",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  }
}